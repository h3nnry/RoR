<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="sections new">
  <h2>Create Section</h2>

  <%= form_for(:section, :url => {:action => 'create'}) do |f| %>

      <table summary="Subject form fields">
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name) %></td>
        </tr>
        <tr>
          <th>Content Type</th>
          <td><%= f.text_field(:content_type) %></td>
        </tr>
        <tr>
          <th>Content</th>
          <td><%= f.text_area(:content, cols: 17, rows: 10) %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position) %></td>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%= f.text_field(:visible) %></td>
        </tr>

        <tr>
          <th>Page</th>
          <td>
            <%= f.select(:page_id, @pages.collect {|page| [ page.name, page.id ] }, { :class => 'my_style_class' })
            %>
          </td>
        </tr>
      </table>

      <div class="form-buttons">
        <%= submit_tag("Create Section") %>
      </div>

  <% end %>
</div>