<table summary="Section form fields">
  <tr>
    <th><%= f.label(:name, "Name") %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:content_type, "Content Type") %></th>
    <td><%= f.radio_button(:content_type, 'text') %> Text</td>
    <td><%= f.radio_button(:content_type, 'html') %> Html</td>
  </tr>
  <tr>
    <th><%= f.label(:content, "Content") %></th>
    <td><%= f.text_area(:content, cols: 17, rows: 10) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position, "Position") %></th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible, "Visible") %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>

  <tr>
    <th>Page</th>
    <td>
      <%= f.select(:page_id, @pages.collect {|page| [ page.name, page.id ] }, { :class => 'my_style_class' })
      %>
    </td>
  </tr>
</table>